<%- include('partials/header.ejs') -%>
<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="Navbar">
        <ul class="navbar-nav mr-auto">
                <li class="nav-item  ml-md-5"><a class="nav-link" href="/"><span class="fa fa-home fa-lg"></span> Home</a></li>
                <li class="nav-item  ml-md-5 active"><a class="nav-link" href="/cars"><span class="fa fa-car fa-lg"></span> Cars</a></li>
                <li class="nav-item  ml-md-3"><a class="nav-link" href="/customer"><span class="fa fa-id-card fa-lg"></span> Customer</a></li>
        </ul>
    </div>
</nav>
<div class=" container">
        <% cardet.forEach(function(car){ %>
    
        <h2 class="col-12 tittle text-light"><%= car.CAR_NAME %></h2>
        <!-- <img class="image col-12" src="images/<%=car.CAR_ID %>.jpg" alt="<%=car.CAR_ID%>.jpg" srcset=""> -->
        <img src="/images/<%=car.CAR_ID %>.jpg" class="col-12 image" alt="<%=car.CAR_ID %>">
    <!-- <div class="container"> -->
        <div class=" ">   
            <h3 class="col-12 tittle text-light"><%= car.CAR_NAME %> Specifications</h3>
        <div class="d-md-flex flex-md-row">   
        <div class="col-12 col-md-6">
                        <table class="table table-striped table-dark">
                            <!-- <caption>Specifications</caption> -->
                            <thead>
                                <th colspan="2" style="text-align: center;"><h3>Car Specifications</h3></th>
                            </thead>
                            <tbody>
                                <tr class="p-3">
                                    <td class="p-3">Model</td>
                                        <td class="p-3"><%= car.MODEL %></td>
                                </tr>
                                <tr class="p-3">
                                    <td class="p-3">Fuel</td>
                                    <td class="p-3"><%= car.FUEL %></td>
                                </tr>
                                <tr class="p-3">
                                    <td class="p-3">Price</td>
                                    <td class="p-3"><%= car.PRICE %></td>
                                </tr>
                                <tr class="p-3">
                                    <td class="p-3">No. of Seats</td>
                                    <td class="p-3"><%= car.SEATS %></td>
                                </tr>
                            </tbody>
                        </table>
            </div>
            <div class="col-12 col-md-6">
                <table class="table table-striped table-dark">
                    <thead>
                        <th colspan="2" style="text-align: center;"><h3>Engine Specifications</h3></th>
                    </thead>
                    <tbody>
                        <tr class="p-3">
                            <td class="p-3">Engine</td>
                            <td class="p-3"><%= car.ENGINE %></td>
                        </tr>
                        <tr class="p-3">
                            <td class="p-3">Milage</td>
                            <td class="p-3"><%= car.MILAGE %></td>
                        </tr>
                        <tr class="p-3">
                            <td class="p-3">BHP</td>
                            <td class="p-3"><%= car.BHP %></td>
                        </tr>
                        <tr class="p-3">
                            <td class="p-3">BootType</td>
                            <td class="p-3"><%= car.BOOTTYPE %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div> 
    </div> 
    <!-- </div> -->
    <%   }) %>
</div>
<%- include('partials/footer.ejs') -%>