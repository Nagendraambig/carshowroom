<%- include('partials/header.ejs') -%>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="Navbar">
            <ul class="navbar-nav mr-auto">
                    <li class="nav-item  ml-md-3"><a class="nav-link" href="/"><span class="fa fa-home fa-lg"></span> Home</a></li>
                    <li class="nav-item  ml-md-3 active"><a class="nav-link" href="/cars"><span class="fa fa-car fa-lg"></span> Cars</a></li>
                    <li class="nav-item  ml-md-3"><a class="nav-link" href="customer"><span class="fa fa-id-card fa-lg"></span> Customer</a></li>
                    <!-- <li class="nav-item  ml-md-3"><a class="nav-link" href="#"><span class="fa fa-address-card fa-lg"></span> Service</a></li> -->
                    <li class="nav-item  ml-md-3"><a href="/employee" class="nav-link"><span class="fa fa-info fa-lg"></span> Employee</a></li>
            </ul>
            <ul class="navbar-nav mr-auto">
                <form class="form-inline ml-md-3" action="/carsearch" method="post">
                    <input class="form-control mr-sm-5" type="text" name="name" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                  </form>
            </ul>
        </div>
    </nav>
    <div class="cont">
            <div class="row">
                <% cars.forEach(function(car){ %>
                    <div class="col-12 col-md-6">
                        <div class="card">
                            <img src="/images/<%=car.CAR_ID %>.jpg" class="card-img-top card-image" alt="<%=car.CAR_ID %>">
                            <div class="card-body">
                                <div class="card-tittle"><h3><%= car.CAR_NAME %></h3></div>
                                <p>Price    <%= car.PRICE %></p>
                                <a href="/cars/<%=car.CAR_ID %>" class="btn btn-primary">More Info</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
    </div>
<%- include('partials/footer.ejs') -%>